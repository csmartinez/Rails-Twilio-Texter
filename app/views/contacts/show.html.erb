<br><h3><%= @contact.name %>'s Number: <%= @contact.number %><h3>

  <br><h4>Send a message to <%= @contact.name %></h4>

<%= form_for Message.new do |f| %>
  <%= f.text_field(:to, value: @contact.number, type: "hidden") %>
  <%= f.label :from %>
  <%= f.text_field :from %><br>
  <%= f.label :body %><br>
  <%= f.text_area(:body, size: "30x2") %><br>
  <button class="btn btn-xs btn-primary">Send</button>
<% end %>
