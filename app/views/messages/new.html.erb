<h1>New Message</h1>

<% if @message.errors.any? %>
  <p>Error:</p>
  <% @message.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= form_for @message do |f| %>
  <%= f.label :to %>
  <%= f.text_field :to %>
  <%= f.label :from %>
  <%= f.text_field :from %><br>
  <%= f.label :body %><br>
  <%= f.text_area(:body, size: "30x2") %><br>
  <button class="btn btn-xs btn-primary">Send</button>
<% end %>
